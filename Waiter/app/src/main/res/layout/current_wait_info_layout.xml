<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/content_event_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_horizontal_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Start Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingStart="56dp">

        <TextView
            style="@style/TextAppearance.AppCompat.Headline"
            android:id="@+id/wait_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/your_current_wait" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!--<RatingBar-->
            <!--style="@style/Widget.AppCompat.RatingBar.Small"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->

            <TextView
                android:id="@+id/event_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_price" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.12"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/wait_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/placeholder_wait_description"
            android:maxLines="5"
            android:ellipsize="end"
            android:textColor="?attr/colorPrimary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:alpha="0.12"
            android:background="@android:color/black" />

    </LinearLayout>
    <!-- End Header -->

    <!-- Start Address -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:alpha="0.36"
            app:srcCompat="@drawable/ic_place_black_24dp" />

        <TextView
            android:id="@+id/event_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/placeholder_address"
            android:textColor="@android:color/primary_text_light" />

    </LinearLayout>
    <!-- End Address -->

    <!-- Start Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:alpha="0.36"
            app:srcCompat="@drawable/ic_schedule_black_24dp" />

        <TextView
            android:id="@+id/wait_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/last_update_on"
            android:textColor="@android:color/primary_text_light" />

    </LinearLayout>
    <!-- End Date -->

    <!-- Start WaitersAvailable -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:alpha="0.36"
            app:srcCompat="@drawable/ic_people_black_24dp" />

        <TextView
            android:id="@+id/waiters_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/placeholder_waiters_state"
            android:textColor="@android:color/primary_text_light" />

    </LinearLayout>
    <!-- End WaitersAvailable -->

</LinearLayout>
